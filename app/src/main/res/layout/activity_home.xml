<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".ui.HomeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/textlogo"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/textdesc"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/img_logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_logo" />

            <ImageView
                android:id="@+id/btn_profile"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:background="?attr/selectableItemBackground"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/menu_profile"
                android:layout_marginRight="8dp"
                android:layout_marginTop="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/btn_mobil"
                app:layout_constraintTop_toBottomOf="@+id/img_desc"/>

            <ImageView
                android:id="@+id/btn_mobil"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:background="?attr/selectableItemBackground"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/menu_mobil"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                app:layout_constraintLeft_toRightOf="@+id/btn_profile"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_desc"/>

            <ImageView
                android:id="@+id/btn_motor_helm"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackground"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/menu_motor_helm"
                app:layout_constraintLeft_toLeftOf="@+id/btn_profile"
                app:layout_constraintRight_toRightOf="@+id/btn_profile"
                app:layout_constraintTop_toBottomOf="@+id/btn_profile" />

            <ImageView
                android:id="@+id/btn_karpet"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackground"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/menu_karpet"
                app:layout_constraintLeft_toLeftOf="@+id/btn_mobil"
                app:layout_constraintRight_toRightOf="@+id/btn_mobil"
                app:layout_constraintTop_toBottomOf="@+id/btn_mobil" />

            <ImageView
                android:id="@+id/btn_spinwhell"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackground"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/menu_spinwheel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/btn_profile"
                app:layout_constraintRight_toRightOf="@+id/btn_profile"
                app:layout_constraintTop_toBottomOf="@+id/btn_motor_helm" />

            <ImageView
                android:id="@+id/btn_aboutus"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackground"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/menu_about_us"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/btn_mobil"
                app:layout_constraintRight_toRightOf="@+id/btn_mobil"
                app:layout_constraintTop_toBottomOf="@+id/btn_karpet" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>